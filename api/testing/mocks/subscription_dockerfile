FROM node:14-alpine

RUN npm install -g @mockoon/cli@2.1.0
COPY mockoon-queerglobal-subscription-api.json ./mockoon-queerglobal-subscription-api.json

# Do not run as root.
RUN adduser --shell /bin/sh --disabled-password --gecos "" mockoon
RUN chown -R mockoon ./mockoon-queerglobal-subscription-api.json
USER mockoon

EXPOSE 31011

ENTRYPOINT ["mockoon-cli", "start", "--hostname", "0.0.0.0", "--daemon-off", "--data", "mockoon-queerglobal-subscription-api.json", "--container"]

# Usage: docker run -p <host_port>:<container_port> mockoon-test